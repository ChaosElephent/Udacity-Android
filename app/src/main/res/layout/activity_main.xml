<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.yet.have.dont.udacityproject0.MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="My Nanodegree App!"
                android:textSize="@dimen/text_size_title" />

            <Button
                style="@style/SelfDefaultBotton"
                android:onClick="onFirst"
                android:text="@string/first_botton" />

            <Button
                style="@style/SelfDefaultBotton"
                android:onClick="onSecond"
                android:text="@string/second_botton" />

            <Button
                style="@style/SelfDefaultBotton"
                android:onClick="onThird"
                android:text="@string/third_botton" />

            <Button
                style="@style/SelfDefaultBotton"
                android:onClick="onForth"
                android:text="@string/forth_botton" />

            <Button
                style="@style/SelfDefaultBotton"
                android:onClick="onFifth"
                android:text="@string/fifth_botton" />

            <Button
                style="@style/SelfDefaultBotton"
                android:onClick="onSixth"
                android:text="@string/sixth_botton" />
        </LinearLayout>
    </ScrollView>

